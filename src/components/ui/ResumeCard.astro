---
// ResumeCard.astro
const {
    position,
    company,
    companyUrl,
    location,
    dates,
    showBorder = true
} = Astro.props;
---

<article
    class={`space-y-2 pb-6 ${showBorder ? "border-b border-tertiary/20" : ""}`}>
    <div class="flex flex-col sm:flex-row sm:justify-between">
        <div>
            <h2>{position}</h2>
            <div class="flex flex-wrap items-center gap-1 text-tertiary">
                <a href={companyUrl} target="_blank" rel="noopener noreferrer">
                    {company}
                </a>
                <span>|</span>
                <span>{location}</span>
            </div>
        </div>

        <span class="text-md text-muted-foreground">{dates}</span>
    </div>

    <div class="resume-content prose prose-sm max-w-none">
        <slot />
    </div>
</article>

<style>
    .resume-content :global(p) {
        margin-bottom: 0.5rem;
    }
    .resume-content :global(ul) {
        list-style-type: disc;
        padding-left: 1.25rem;
        margin-top: 0.5rem;
    }
    .resume-content :global(li) {
        margin-bottom: 0.25rem;
    }
</style>
