---
import ThemeToggle from "@/components/ThemeToggle.astro";
import { SITE } from "@/siteConfig";

const navLinks = SITE.nav;
---

<style>
    input#menu-toggle {
        position: absolute;
        opacity: 0;
        width: 0;
        height: 0;
        pointer-events: none;
    }

    /* Hamburger styling */
    .hamburger {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 5px;
        width: 24px;
        height: 24px;
        cursor: pointer;
        color: var(--color-tertiary);
        background: transparent;
        border: none;
        padding: 0;
        position: relative;
        z-index: 50; /* above mobile-menu */
    }

    .hamburger-line {
        width: 24px;
        height: 2px;
        background-color: currentColor;
        transition:
            transform 0.3s ease,
            opacity 0.3s ease;
        transform-origin: center;
    }

    /* Animate hamburger to X when menu open */
    input#menu-toggle:checked + label.hamburger .line1 {
        transform: rotate(45deg) translateY(0);
        position: absolute;
        top: 11px;
    }

    input#menu-toggle:checked + label.hamburger .line2 {
        opacity: 0;
    }

    input#menu-toggle:checked + label.hamburger .line3 {
        transform: rotate(-45deg) translateY(0);
        position: absolute;
        top: 11px;
    }

    /* Mobile menu hidden by default */
    .mobile-menu {
        position: fixed;
        top: 88px; /* navbar height */
        left: 0;
        right: 0;
        background: var(--color-background);
        overflow-y: auto;
        padding: 1rem 1.5rem;
        z-index: 40;

        max-height: 0; /* hide menu */
        opacity: 0;
        pointer-events: none;
        overflow: hidden; /* hide contents when closed */

        transition:
            max-height 0.3s ease,
            opacity 0.3s ease;
    }

    input#menu-toggle:checked ~ .mobile-menu {
        min-height: 100vh;
        opacity: 1;
        pointer-events: auto;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const toggleBtn = document.getElementById("menu-toggle-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        if (!toggleBtn || !mobileMenu) return;

        toggleBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("open");
        });

        // Optional: close menu when clicking a link inside it
        mobileMenu.querySelectorAll("a").forEach((link) => {
            link.addEventListener("click", () => {
                mobileMenu.classList.remove("open");
            });
        });
    });
</script>

<nav class="px-6 py-6 flex items-center justify-between w-full text-md">
    <!-- Desktop Nav -->
    <div class="hidden md:flex items-center justify-between w-full">
        <a href="/" class="text-lg font-medium hover:underline">
            {SITE.name || SITE.title}
        </a>
        <ul class="flex items-center space-x-6">
            {
                navLinks.map((link) => (
                    <li>
                        <a href={link.href} class="hover:underline">
                            {link.label}
                        </a>
                    </li>
                ))
            }
            <li>
                <a href="/search" class="hover:underline">
                    Search
                </a>
            </li>
            <ThemeToggle />
        </ul>
    </div>

    <!-- Mobile Nav -->
    <div class="flex flex-col md:hidden w-full relative">
        <div class="flex items-center justify-between w-full">
            <a href="/" class="text-lg font-medium">
                {SITE.name || SITE.title}
            </a>

            <div class="flex items-center space-x-4">
                <ThemeToggle />

                <!-- Move checkbox and label outside the flex div, as siblings of mobile-menu -->
                <input type="checkbox" id="menu-toggle" />

                <label
                    for="menu-toggle"
                    class="hamburger"
                    aria-label="Toggle menu"
                    role="button"
                    tabindex="0"
                >
                    <span class="hamburger-line line1"></span>
                    <span class="hamburger-line line2"></span>
                    <span class="hamburger-line line3"></span>
                </label>

                <div id="mobile-menu" class="mobile-menu">
                    <ul class="space-y-2">
                        {
                            navLinks.map((link) => (
                                <li>
                                    <a
                                        href={link.href}
                                        class="block py-2 text-md hover:text-primary transition"
                                    >
                                        {link.label}
                                    </a>
                                </li>
                            ))
                        }
                        <li>
                            <a
                                href="/search"
                                class="block py-2 text-md hover:text-primary transition"
                            >
                                Search
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</nav>
