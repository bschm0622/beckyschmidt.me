---
import Layout from "@/layouts/Layout.astro";
import BlogReel from "@/components/BlogReel.astro";
import { getCollection } from "astro:content";
import BlogTag from "@/components/ui/BlogTag.astro";
import { slugifyStr } from "@/utils/Slugify";

const allPosts = await getCollection("blog");

// Step 1: Count how many posts per tag
const tagCounts = allPosts.reduce(
    (acc, post) => {
        (post.data.tags || []).forEach((tag) => {
            acc[tag] = (acc[tag] || 0) + 1;
        });
        return acc;
    },
    {} as Record<string, number>,
);

// Step 2: Get all tags sorted by count descending
const allTags = Object.keys(tagCounts).sort(
    (a, b) => tagCounts[b] - tagCounts[a],
);
---

<Layout title="Blog" description="Becky's blog" data-pagefind-ignore>
    <div class="mx-auto w-full mt-5 md:mt-10 space-y-10">
        <div class="space-y-6">
            <h1>Blog</h1>

            <div class="flex flex-wrap items-center gap-2">
                <span class="text-sm text-muted-foreground whitespace-nowrap">Filter by tag:</span>
                {
                    allTags.map((tag) => (
                        <BlogTag
                            href={`/blog/tag/${slugifyStr(tag)}/`}
                            key={tag}
                        >
                            {tag} ({tagCounts[tag]})
                        </BlogTag>
                    ))
                }
            </div>
        </div>

        <BlogReel posts={allPosts} />
    </div>
</Layout>
