---
import Layout from "@/layouts/Layout.astro";
import BlogReel from "@/components/BlogReel.astro";
import { SITE } from "@/siteConfig";

const projectsLink =
  SITE.nav.find((item) => item.label === "Projects")?.href ?? "/projects";
---

<Layout title="Home" description="Home page">
  <div class="mx-auto w-full mt-5 md:mt-10 space-y-8">
    <!-- Intro + Bio -->
    <div class="space-y-6">
      <h1>Hi, I'm Becky.</h1>

      <p>
        I’m a Product Manager at
        <a
          href="https://octane11.com"
          target="_blank"
          rel="noopener noreferrer"
        >
          Octane11
        </a>
        building data and AI products.
        I've always liked figuring out how things work - lately, that’s meant building
        <a
          href={projectsLink}
        >
          side projects
        </a>
        to see what’s actually possible with AI.
      </p>

      <p>
        I'm a native Hoosier living in Indianapolis with my husband,
        our toddler, and four backyard chickens.
      </p>

      <!-- Social links (visually attached to bio) -->
      <div class="flex items-center gap-4">
        <a
          href={`mailto:${SITE.socials?.email}`}
          class="inline-flex items-center gap-1.5 hover:underline"
        >
          Email
          <svg
            class="text-muted-foreground size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1zm11-3v8h-2V6.413l-7.793 7.794l-1.414-1.414L17.585 5H13V3z"
            />
          </svg>
        </a>

        <a
          href={SITE.socials?.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1.5 hover:underline"
        >
          LinkedIn
          <svg
            class="text-muted-foreground size-4"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
          >
            <path
              fill="currentColor"
              d="M10 6v2H5v11h11v-5h2v6a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1zm11-3v8h-2V6.413l-7.793 7.794l-1.414-1.414L17.585 5H13V3z"
            />
          </svg>
        </a>
      </div>
    </div>

    <!-- Latest notes -->
    <div class="space-y-6 pt-6 md:pt-8">
      <h2>Latest notes</h2>
      <BlogReel preview={true} />
    </div>
  </div>
</Layout>
