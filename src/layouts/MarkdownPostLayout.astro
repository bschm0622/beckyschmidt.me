---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

const { title, description, image, canonicalURL, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en" class="light h-full">
    <head>
        <BaseHead
            title={title}
            description={description}
            image={image}
            canonicalURL={canonicalURL}
        />
    </head>
    <Navbar />
    <body class="bg-background text-foreground transition-colors min-h-screen">
        <main class="flex-1 mx-auto w-full max-w-4xl mt-5 md:mt-10 typography">
            <h1>{frontmatter.title}</h1>
            <p>Written by {frontmatter.author}</p>
            <slot />
        </main>
    </body>
    <Footer />
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    /* Prevent flash of unstyled content */
    html:not(.light):not(.dark) {
        visibility: hidden;
    }

    html.light,
    html.dark {
        visibility: visible;
    }
</style>
